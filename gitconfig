[user]
	name = Gianluigi Di Donato 
	email = gianluigi.didonato@gmail.com
[apply]
    whitespace = nowarn
[core]
    editor = gvim --nofork
    excludesfile = ~/.gitignore
[alias]
    co = commit
    ck = checkout
    df = diff
    latest = diff @{1}
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    ls = ls-files 
    pl = !git fetch && git merge FETCH_HEAD
    ps = push origin master
    st = status
    wc = whatchanged --oneline
    unpushed = !GIT_CURRENT_BRANCH=$(git name-rev --name-only HEAD) && git lg origin/$GIT_CURRENT_BRANCH..$GIT_CURRENT_BRANCH
[color]
    ui = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = black bold
    frag = magenta bold
    old = red bold
    new = green bold
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
[merge]
	ff = false
